{
  "_metadata": {
    "name": "Solicitud de Subvención Genérica",
    "description": "Para cualquier solicitud de ayudas",
    "template_pattern": ".*solicitud.*",
    "version": "1.0"
  },
  "mappings": {
    "solicitante": ["empresa.nombre_completo"],
    "cif_solicitante": ["empresa.cif"],
    "domicilio_social": ["empresa.direccion"],
    "localidad": ["empresa.ciudad"],
    "cp": ["empresa.codigo_postal"],
    "telefono_contacto": ["empresa.telefono"],
    "email_contacto": ["empresa.email"],
    
    "representante_legal": ["representante.nombre_completo"],
    "cargo_representante": ["representante.cargo"],
    "dni_representante": ["representante.dni"],
    
    "proyecto_solicitud": ["proyectos.principal"],
    "descripcion_proyecto": ["proyectos.descripcion"],
    "importe_solicitado": ["proyectos.presupuesto"],
    
    "fecha_solicitud": ["_current_date"]
  }
}